<div>
  <div>
    <h1>
      List of all challenge runs
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new challenge run
    </h2>

    <form action="/insert_challenge_run" method="post">
      <div>
        <label for="challenge_type_id_box">
          Challenge type
        </label>

        <input type="text" id="challenge_type_id_box" name="query_challenge_type_id">
      </div>

      <div>
        <label for="user_progress_box">
          User progress
        </label>

        <input type="text" id="user_progress_box" name="query_user_progress">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="end_date_box">
          End date
        </label>

        <input type="date" id="end_date_box" name="query_end_date">
      </div>

      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status">
      </div>

      <button>
        Create challenge run
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Challenge type
        </th>

        <th>
          User progress
        </th>

        <th>
          User
        </th>

        <th>
          End date
        </th>

        <th>
          Status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_challenge_runs.each do |a_challenge_run| %>
      <tr>
        <td>
          <%= a_challenge_run.id %>
        </td>

        <td>
          <%= a_challenge_run.challenge_type_id %>
        </td>

        <td>
          <%= a_challenge_run.user_progress %>
        </td>

        <td>
          <%= a_challenge_run.user_id %>
        </td>

        <td>
          <%= a_challenge_run.end_date %>
        </td>

        <td>
          <%= a_challenge_run.status %>
        </td>

        <td>
          <%= time_ago_in_words(a_challenge_run.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_challenge_run.updated_at) %> ago
        </td>

        <td>
          <a href="/challenge_runs/<%= a_challenge_run.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
